<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.shimk.trial.JoinEvent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Join Event"
            android:id="@+id/joinText"
            android:layout_gravity="center_horizontal"
            android:textSize="33dp" />

        <TextView
            android:text="Event Code Is Not Vaild"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/joinErrorMessage"
            android:textSize="20dp"
            android:textColor="#fb0000"
            android:textStyle="normal|bold|italic"
            android:textAlignment="center"
            android:visibility="gone" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/eventCodeEntry"
            android:hint="Event Code" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Join"
            android:id="@+id/joinBut"
            android:layout_gravity="center_horizontal"
            android:onClick="joinNewEvent" />
    </LinearLayout>
</RelativeLayout>
